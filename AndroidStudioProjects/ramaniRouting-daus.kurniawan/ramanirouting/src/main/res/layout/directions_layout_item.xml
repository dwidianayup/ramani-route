<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_vertical">


    <RelativeLayout
        android:id="@+id/directions_image_item_view"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/directions_image_item"
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_directions"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@+id/directions_image_item_view"
        android:layout_alignBottom="@+id/directions_image_item_view"
        android:layout_height="80dp"
        android:layout_marginRight="5dp">

        <LinearLayout

            android:id="@+id/directions_distance_view"
            android:layout_width="wrap_content"
            android:layout_height="20dp">

            <TextView
                android:id="@+id/directions_distance_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:text="Distance : "/>
            <TextView
                android:id="@+id/directions_distance_value_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:text="10 Km"/>
        </LinearLayout>

        <TextView

            android:id="@+id/directions_roadname_item"
            android:layout_below="@+id/directions_distance_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Jalan Soekarno Hatta Yang Ada di semarang "/>
    </RelativeLayout>
</RelativeLayout>