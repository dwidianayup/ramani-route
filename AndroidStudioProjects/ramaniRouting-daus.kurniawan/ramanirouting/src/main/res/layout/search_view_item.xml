<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/view_search_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_rounded_normal"
        android:padding="10dp"
        android:elevation="3dp"
        android:layout_margin="3dp">
        <ImageView
            android:id="@+id/img_address"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/marker_red"
            />
        <TextView
            android:layout_toRightOf="@+id/img_address"
            android:id="@+id/displayName_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:maxLines="2"
            android:textSize="14sp"
            android:layout_marginBottom="3dp"
            android:text="Kota Semarang, Provinsi Jawa Tengah, Negara Indonesia"/>

        <TextView
            android:layout_toRightOf="@+id/img_address"
            android:id="@+id/type_place_item"
            android:layout_below="@+id/displayName_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:textSize="10sp"
            android:text="Type : city"/>
        <TextView
            android:id="@+id/class_place_item"
            android:layout_toRightOf="@+id/type_place_item"
            android:layout_below="@+id/displayName_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Class : place"/>
    </RelativeLayout>

</RelativeLayout>